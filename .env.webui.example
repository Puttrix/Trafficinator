# Trafficinator Control UI - Environment Configuration

# Matomo Configuration
MATOMO_URL=https://matomo.example.com/matomo.php
MATOMO_SITE_ID=1
MATOMO_TOKEN_AUTH=

# Traffic Generation
TARGET_VISITS_PER_DAY=20000
PAGEVIEWS_MIN=3
PAGEVIEWS_MAX=6
CONCURRENCY=50
PAUSE_BETWEEN_PVS_MIN=0.5
PAUSE_BETWEEN_PVS_MAX=2.0

# Auto-stop Controls
AUTO_STOP_AFTER_HOURS=0
MAX_TOTAL_VISITS=0

# Features
SITESEARCH_PROBABILITY=0.15
VISIT_DURATION_MIN=1.0
VISIT_DURATION_MAX=8.0
OUTLINKS_PROBABILITY=0.10
DOWNLOADS_PROBABILITY=0.08
CLICK_EVENTS_PROBABILITY=0.25
RANDOM_EVENTS_PROBABILITY=0.12

# Traffic Sources
DIRECT_TRAFFIC_PROBABILITY=0.30

# Geolocation
RANDOMIZE_VISITOR_COUNTRIES=true

# Ecommerce
ECOMMERCE_PROBABILITY=0.05
ECOMMERCE_ORDER_VALUE_MIN=15.99
ECOMMERCE_ORDER_VALUE_MAX=299.99
ECOMMERCE_CURRENCY=USD

# Localization
TIMEZONE=UTC

# Control UI Settings
CONTROL_UI_PORT=8000
CONTROL_UI_API_KEY=change-me-in-production
CORS_ORIGINS=*
